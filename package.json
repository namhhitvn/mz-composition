{
  "name": "mz-composition",
  "version": "1.0.0",
  "description": "micro easy composition",
  "author": "Nam Hoang <namhh.itvn@gmail.com>",
  "license": "MIT",
  "url": "https://github.com/namhhitvn/mz-composition#readme",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --config ./tests/jest.json --runInBand",
    "coverage": "npm run test -- --coverage",
    "test:dev": "jest --config ./tests/jest.json --runInBand --watch",
    "test:graphql:merge": "rimraf ./tests/node-src/typedefs/_final-schema.graphql && cat ./tests/node-src/typedefs/*.graphql >> ./tests/node-src/typedefs/_final-schema.graphql",
    "test:graphql:merge:windows": "rimraf ./tests/node-src/typedefs/_final-schema.graphql && type ./tests/node-src/typedefs/*.graphql > ./tests/node-src/typedefs/_final-schema.graphql",
    "test:graphql:codegen": "npm run test:graphql:merge && graphql-codegen --config ./tests/node-src/graphql-codegen.yml",
    "test:graphql:codegen:windows": "npm run test:graphql:merge:windows && graphql-codegen --config ./tests/node-src/graphql-codegen.yml",
    "prerelease": "npm run build",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-angular": "17.3.0",
    "@graphql-codegen/cli": "^2.16.2",
    "@graphql-codegen/client-preset": "^1.2.4",
    "@graphql-codegen/typescript": "^2.8.6",
    "@graphql-codegen/typescript-resolvers": "^2.7.11",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jest": "29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "release-it": "15.6.0",
    "rimraf": "^3.0.2",
    "supertest": "6.3.3",
    "ts-jest": "29.0.3",
    "typeorm": "0.3.11",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.14",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-pino-logger": "^7.0.0",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.2"
  },
  "peerDependencies": {},
  "lint-staged": {
    "**/*.{ts,json}": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/namhhitvn/mz-composition"
  }
}
